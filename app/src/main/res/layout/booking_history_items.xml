<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="7dp"
    android:background="@color/white"
    android:layout_margin="5dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:padding="5dp"
        android:background="@color/colourHINT"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/bh_bike_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#JJD7hdJ"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Booking status: "/>

            <TextView
                android:id="@+id/bh_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:textColor="#29B12E"
                android:textStyle="bold" />
        </LinearLayout>>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bike Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/bikename"
              android:textSize="15sp"
            android:layout_weight="6"
            android:gravity="center"
            android:textAllCaps="false"
            android:background="@drawable/btn_grey"
            android:layout_gravity="center"
            android:hint="Yamaha"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="4"
            android:text="Booked On"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/booked_on"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:background="@drawable/btn_grey"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="4"
            android:text="Paid Amount"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paid_amt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:background="@drawable/btn_grey"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="4"
            android:text="Left Amount"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/left_amt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:background="@drawable/btn_grey"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pickup date and time"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="5dp"
            />
        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView

                android:textSize="15sp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/bhp_date"
                android:enabled="false"
                android:textAllCaps="false"
                android:padding="5dp"
                android:background="@drawable/btn_grey"
                android:layout_gravity="center"
                android:hint="Date"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="40dp"/>

            <TextView android:textSize="15sp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/bhp_time"
                android:enabled="false"
                android:padding="5dp"

                android:textAllCaps="false"
                android:inputType="number"
                android:background="@drawable/btn_grey"
                android:layout_gravity="center"
                android:hint="Time"
                android:layout_width="0dp"
                android:layout_height="40dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Drop date and time"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="5dp"
            />
        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView android:textSize="15sp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/bhd_date"
                android:textAllCaps="false"
                android:background="@drawable/btn_grey"
                android:layout_gravity="center"
                android:hint="Date"
                android:padding="5dp"

                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="40dp"/>

            <TextView android:textSize="15sp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/bhd_time"
                android:textAllCaps="false"
                android:background="@drawable/btn_grey"
                android:layout_gravity="center"
                android:hint="Time"
                android:padding="5dp"

                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="40dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="4"
            android:text="Total Rent"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tot_rent"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:background="@drawable/btn_grey"
            android:gravity="center"
            android:inputType="number"
            android:textAllCaps="false"
            android:textSize="15sp" />
    </LinearLayout>




</LinearLayout>

</androidx.cardview.widget.CardView>