                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="All bookings"
                                android:textColor="@color/black"
                                />

                            <TextView
                                android:id="@+id/all_no"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
